                            <li><a class="dropdown-item " href="@Url.Action("Index", "LoaiSanPham", new { area = "Admin" })">Quản lý loại sản phẩm</a></li>
                            <li><a class="dropdown-item " href="@Url.Action("Index", "Mau", new { area = "Admin" })">Quản lý màu sản phẩm</a></li>
                        </ul>
                    </li>
                    <!-- Quản lý tài khoản -->
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "TaiKhoan", new { area = "Admin" })">Quản lý tài khoản</a>
                    </li>

                    <!-- Quản lý nhân viên -->
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "NhanVien", new { area = "Admin" })">Quản lý nhân viên</a>
                    </li>
                    <!-- Quản lý khách hàng -->
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "KhachHang", new { area = "Admin" })">Quản lý khách hàng</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Index", "HoaDon", new { area = "Admin" })">Hóa đơn</a>
                    </li>


                    <li class="nav-item dropdown">
