@model QLCoffee.Models.PRODUCT

@{
    ViewBag.Title = "UploadProduct";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM SẢN PHẨM MỚI</h2>

@*Khai bao de Upload file*@
@using (Html.BeginForm("UploadProduct", "PRODUCTs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           <label>Mã sản phẩm: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.IDPro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IDPro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Tên sản phẩm </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NamePro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NamePro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Mô tả:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Desciption, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Desciption, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Mã sản phẩm: </label>
            <div class="col-md-10">
                @Html.DropDownList("MaLoaiSP", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaLoaiSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Hình ảnh 1:</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.UploadImage, htmlAttributes: new { type = "file" }) @*Lam toi day--------------*@
                @Html.ValidationMessageFor(model => model.UploadImage, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label>Hình ảnh 2:</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.UploadImage1, htmlAttributes: new { type = "file" }) @*Lam toi day--------------*@
                @Html.ValidationMessageFor(model => model.UploadImage1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Hình ảnh 3:</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.UploadImage2, htmlAttributes: new { type = "file" }) @*Lam toi day--------------*@
                @Html.ValidationMessageFor(model => model.UploadImage2, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group" id="bot-size">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />|@Html.ActionLink("Danh sách", "Index", null, new { @class = "btn btn-primary" })

            </div>
        </div>

    </div>
   
   
        
  
}


