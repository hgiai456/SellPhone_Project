@model QLCoffee.Models.ViewModel.CheckoutVM

@{
    ViewBag.Title = "OrderSuccess";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

<style>
    .success-container {
        margin: 50px auto;
        padding: 30px;
        max-width: 600px;
        text-align: center;
        background: #f9f9f9;
        border: 2px solid #28a745;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .success-title {
        color: #28a745;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .success-message {
        font-size: 18px;
        color: #555;
        line-height: 1.6;
    }

    .btn-return-home {
        margin-top: 20px;
        background-color: #28a745;
        color: #fff;
        font-size: 18px;
        font-weight: bold;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-return-home:hover {
            background-color: #218838;
            color: #fff;
        }
</style>
<div class="success-container">
    <h2 class="success-title">Cảm ơn quý khách!</h2>
    <p class="success-message">
        Quý khách đã đặt hàng thành công! Chúng tôi sẽ liên hệ với quý khách để xác nhận đơn hàng trong thời gian sớm nhất.
    </p>
    <a href="/Home/TrangChu" class="btn btn-return-home">Quay lại Trang Chủ</a>
</div>

