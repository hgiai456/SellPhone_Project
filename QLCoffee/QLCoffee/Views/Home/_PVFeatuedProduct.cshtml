@model QLCoffee.Models.ViewModel.HomeProductVM
@using PagedList.Mvc;
<!DOCTYPE html>
<html>
    <head>
        <link href="~/Content/mycss/style.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Bootstrap JS (CDN) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        @if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
        {
            <section class="container-fluid listProduct">
                <h2 class="section-title">Sản phẩm nổi bật</h2>
                <ul class="list-container">
                    @foreach (var sanpham in Model.FeaturedProducts)
                    {
                        <li class="lproduct-item">
                            <div class="product-img-wrapper">
                                <a href="@Url.Action("ProductDetail", "Home", new { id = sanpham.MaSP })">
                                    <img class="product-img" style="height:150px; width:150px" src="@Url.Content(sanpham.PRODUCT.Img1)" />

                                </a>
                            </div>
                            <div class="product-info">
                                <p class="proPrice">@Html.DisplayFor(modelItem => sanpham.GiaSP)</p>
                                <p class="proName">@Html.DisplayFor(modelItem => sanpham.TenSP)</p>
                                <p class="proSale">Đã bán:&nbsp;@Html.DisplayFor(modelItem => sanpham.CHITIET_HOADON.Count)</p>
                            </div>
                        </li>
                    }
                </ul>
            </section>
            <!----Hiển thị phân trang-->
            
        }
        else
        {
            <p>Không tin được sản phẩm nào phù hợp.</p>
        }
    </body>                     
</html>