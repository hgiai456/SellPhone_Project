    @model QLCoffee.Models.MAU

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM MÀU MỚI</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            <label>Tên màu:</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenMau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenMau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Mã màu (#hex): </label>
            <div class="col-md-10">
                <input type="color" value="">
                @Html.ValidationMessageFor(model => model.RGB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-top:10px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />|          
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })               
            </div>
        </div>
    </div>
}


