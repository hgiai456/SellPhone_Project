@model QLCoffee.Models.SANPHAM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa chi tiết sản phẩm</h2>

<h3>Bạn có chắc chắn muốn xóa chi tiết sản phẩm này không ?</h3>
<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã sản phẩm: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaSP)
        </dd>

        <dt>
           Tên sản phẩm: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
           Giá sản phẩm: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GiaSP)
        </dd>

        <dt>
           Số lượng sản phẩm: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuongSP)
        </dd>


        
        <dt>
            Ngày sản xuất: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgaySX)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Quay về danh sách", "Index", null, new { @class = "btn btn-dark" })
        </div>
    }
</div>
