<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Areas/Admin/Content/MyCss/AdminStyle.css" rel="stylesheet" />
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />



    <script>
        $(document).ready(function () {
            $(".dropdown-toggle").click(function (e) {
                e.preventDefault(); // Ngăn chặn chuyển hướng

                var $submenu = $(this).next(".dropdown-menu"); // Lấy submenu tương ứng
                var $otherMenus = $(".dropdown-menu").not($submenu); // Lấy các dropdown khác

                if ($submenu.hasClass("show")) {
                    // Nếu submenu đã mở, đóng nó
                    $submenu.removeClass("show").slideUp(300);
                } else {
                    // Đóng các menu khác trước khi mở menu mới
                    $otherMenus.removeClass("show").slideUp(300);

                    // Hiện submenu và trượt xuống
                    $submenu.addClass("show").slideDown(300);
                }
            });
        });
    </script>

</head>


<body>
    <div class="container-fluid">
        <div class="row" id="div-left-content">
