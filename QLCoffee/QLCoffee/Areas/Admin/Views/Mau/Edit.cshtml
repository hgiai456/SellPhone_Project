@model QLCoffee.Models.MAU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>CHỈNH SỬA MÀU</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>MAU</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaMau)

    <div class="form-group">
        <h4>Tên màu:</h4>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenMau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenMau, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h4>Mã màu</h4>
        <div class="col-md-10">
            @Html.EditorFor(model => model.RGB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RGB, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" id="bot-size">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />|
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
}



