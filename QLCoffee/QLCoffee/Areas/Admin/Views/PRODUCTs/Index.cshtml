@model IEnumerable<QLCoffee.Models.PRODUCT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int i = 1;
}

<h2>Quản lý sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới", "UploadProduct", null, new { @class = "btn btn-sm btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            STT     
        </th>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Desciption)
        </th>*@
        <th>
           Hình 1
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Img2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Img3)
        </th>*@
        <th>
            Tên loại sản phẩm
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) 
     {
        <tr>
                <td>
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDPro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamePro)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Desciption)
                </td>*@
                <td>
                    <img style="height:150px; width:150px" src="@Url.Content(item.Img1)" />
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Img2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Img3)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.LOAISANPHAM.TenLoaiSP) @*Truy vấn khóa phụ để xuất ra tên loại sản phẩm*@
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDPro }, new { @class = "btn btn-sm btn-primary" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IDPro }, new { @class = "btn btn-sm btn-dark" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDPro }, new { @class = "btn btn-sm btn-danger" })
                </td>
    
        </tr>
        i++;
     }

</table>
