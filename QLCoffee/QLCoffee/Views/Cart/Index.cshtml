@model QLCoffee.Models.ViewModel.Cart

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .shoppingcart {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 20px auto;
        max-width: 900px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f7f7f7;
            color: #555;
        }

        .table tbody tr:hover {
            background-color: #f9f9f9;
        }

        .table img {
            max-height: 80px;
            border-radius: 5px;
        }

    .quantity-controls {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }

        .quantity-controls button {
            background-color: #ff6b6b;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            cursor: pointer;
            font-size: 14px;
            font-weight: bold;
            transition: background-color 0.2s;
        }

            .quantity-controls button:hover {
                background-color: #e05656;
            }

        .quantity-controls input {
            width: 50px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 5px;
            font-size: 14px;
        }

    .cart-section {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        margin-top: 20px;
        text-align: center;
    }

        .cart-section strong {
            font-size: 18px;
        }

        .cart-section .btn {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #ff6b6b;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.2s;
        }

            .cart-section .btn:hover {
                background-color: #e05656;
            }

    .cart-buttons {
        margin-top: 20px;
        text-align: center;
    }

        .cart-buttons .btn {
            margin: 0 10px;
            padding: 10px 20px;
            background-color: #ffa502;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.2s;
        }

            .cart-buttons .btn:hover {
                background-color: #e89c02;
            }
</style>
